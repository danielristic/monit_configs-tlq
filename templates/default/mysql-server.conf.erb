#Monitoring Mysql Service

check process mysql with pidfile /var/run/mysqld-default/mysql.pid
  group database
  start program = "/usr/sbin/service mysql-default start"
  stop program = "/usr/sbin/service mysql-default stop"
  if failed host 127.0.0.1 port 3306 then restart
  if 15 restarts within 15 cycles then timeout
